<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
    shape的類型含有:
    1.rectangle   長方形、矩形
    2.oval   橢圓形、卵形
    3.line   線
    4.ring   環形
    -->
    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners android:radius="5dip" />
    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
        android:width="1.0dip"
        android:color="@color/gray"
        />
    <solid android:color="@color/light_blue_50" />

    <gradient
        android:angle="90"
        android:endColor="@color/GRADIENT_COLOR_ORANGE_TOP"
        android:startColor="@color/GRADIENT_COLOR_ORANGE_BOTTOM"

        android:endX="0.5"
        android:endY="1.0"
        android:startX="0.5"
        android:startY="0"
        android:type="linear"

        />
    <!-- <padding android:left="10dp" android:top="10dp"
      android:right="10dp" android:bottom="10dp" />-->

</shape>