<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/shape_row_historyorder"
        android:layout_margin="5dp"
        android:weightSum="1.0"
        >


        <LinearLayout

            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"

            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:layout_margin="4dp"
                android:layout_weight="0.2"
                />

            <TextView
                android:id="@+id/notifyTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"

                android:layout_weight="0.6"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="來自 XXX 的團購訊息"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="4dp"
                android:layout_weight="0.2"

                />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_weight="0.18"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="發起日期 :"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="2020/03/04 19:51:26"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_weight="0.18"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="訂單編號 :"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="M1234567890"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_weight="0.18"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="參加人數"
                android:textColor="@color/blue"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/orderJoinCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="1"
                android:textSize="14dp"
                android:textColor="@color/blue"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>