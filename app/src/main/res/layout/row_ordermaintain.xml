<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/shape_row_ordermaintain"
        android:layout_margin="5dp"
        android:weightSum="1.0">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/orderMaintain_UserView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/orderMaintain_UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical|left"
                    android:scaleType="centerInside"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/orderMaintain_UserContent"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:weightSum="1.0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="1.0">

                    <TextView

                        android:id="@+id/orderMaintain_PayStatusTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|left"
                        android:scaleType="centerInside"
                        android:text="付款日"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/orderMaintain_PayStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|left"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="1.0">

                    <TextView

                        android:id="@+id/orderMaintain_PayNumberTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="付款金額"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/orderMaintain_PayNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="center_vertical|left"
                        android:scaleType="centerInside"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/orderMaintain_Edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_weight="0.2"
                android:gravity="center"
                android:text="編輯"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>