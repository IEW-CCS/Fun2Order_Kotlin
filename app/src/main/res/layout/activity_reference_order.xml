<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.ReferenceOrderActivity">

    <TextView
        android:id="@+id/OrderBrandName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="BrandName"
        android:textColor="#24A59A"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/OrderInfoLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/OrderInfoLayout"
        android:layout_width="fill_parent"
        android:layout_height="150dp"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/OrderBrandName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_rectangle_refprodinfo"
        android:orientation="vertical"
        android:weightSum="1.0"
        tools:layout_editor_absoluteX="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1.0">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="發起人"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderOwner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="James"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1.0">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="發起時間"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderStartTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="2020/03/04 19:51:26"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1.0">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="截止時間"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/orderDueTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="2020/03/04 19:51:26"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1.0">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="預計參與數"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/orderExpectedCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="0"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="未回覆人數"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/orderNotReply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="0"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1.0">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="已參加人數"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/orderJoinedCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="0"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="不參加人數"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/orderNotJoin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_vertical|left"
                android:scaleType="centerInside"
                android:text="0"
                android:textColor="@android:color/primary_text_light"
                android:textSize="14dp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout

        android:id="@+id/OrderActionLayout"

        app:layout_constraintTop_toBottomOf="@+id/OrderInfoLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1.0">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center_vertical|left"
            android:scaleType="centerInside"
            android:text="已回覆訂單列表"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/OrderFollow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="追隨"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecycleViewReference"
        android:layout_width="0dp"
        android:layout_height="0dp"


        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrderActionLayout"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:background="@drawable/shape_rectangle_gray"

         />


</androidx.constraintlayout.widget.ConstraintLayout>