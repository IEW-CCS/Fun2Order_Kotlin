<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewMenuBasicInfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#E0E0E0"
            android:gravity="center_vertical"
            android:text="  菜單基本資料"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewBrandName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.25"
                    android:text="品牌"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/editTextMenuID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.75"
                    android:background="@drawable/corners_rect_gray"
                    android:paddingLeft="4dp"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSelectBrandType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.3"
                    android:text="分類"
                    android:textColor="@color/Blue"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewCrMenuType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.7"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewEditImageDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="編輯照片及敘述"
            android:textColor="@color/Blue"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMenuDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.3"
                android:text="菜單描述"
                android:textColor="#000000"
                android:textSize="18dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextMenuDesc"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.7"
                android:background="@drawable/corners_rect_gray"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="4dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutMenuImageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMenuPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.3"
                android:text="菜單圖片"
                android:textColor="#4FC3F7"
                android:textSize="18dp"
                android:visibility="gone" />

        </LinearLayout>
        <GridLayout
            android:id="@+id/gridLayoutImageBtnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
        </GridLayout>


        <TextView
            android:id="@+id/textViewEditStoreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="編輯店家聯絡資訊"
            android:textColor="@color/Blue"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="#E0E0E0"
            android:gravity="center_vertical"
            android:text="  地點及產品資訊(選填)"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:weightSum="1.0"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAddLocation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.25"
                android:gravity="center_vertical"
                android:text="新增地點"
                android:textColor="@color/Blue"
                android:textSize="18dp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:weightSum="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewLocationItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="已加入"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewLocationItemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4"
                    android:text="0 項"
                    android:textColor="#000000"
                    android:textSize="18dp" />


                <ImageView
                    android:id="@+id/imageViewLocationItemList"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:tint="@android:color/tab_indicator_text"
                    app:srcCompat="@drawable/icon_disclosure_indicator" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:weightSum="1.0"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAddProductPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.25"
                android:gravity="center_vertical"
                android:text="新增產品"
                android:textColor="@color/Blue"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:weightSum="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewProductPriceItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="已加入"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewProductPriceItemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:text="0 項"
                    android:textColor="#000000"
                    android:textSize="18dp" />


                <ImageView
                    android:id="@+id/imageViewProductPriceItemList"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:tint="@android:color/tab_indicator_text"
                    app:srcCompat="@drawable/icon_disclosure_indicator" />

               </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxContactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="參加者需提供郵寄或聯絡資訊"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/corners_rect_red"
            android:foregroundGravity="center_vertical|clip_horizontal"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:id="@+id/imageMenuList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_menu_recipe" />

            <TextView
                android:id="@+id/textViewAddRecipe"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageMenuList"

                android:gravity="center_vertical"
                android:text="指定配方"
                android:textAlignment="center"
                android:textColor="#B71C1C"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:foregroundGravity="center_vertical|clip_horizontal"
            android:background="@drawable/corners_rect_red"
            android:padding="7dp">

            <ImageView
                android:id="@+id/imageMakeMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_menu_item" />

            <TextView
                android:id="@+id/textViewMakeMenu"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageMenuList"

                android:gravity="center_vertical"
                android:text="產生菜單"
                android:textAlignment="center"
                android:textColor="#B71C1C"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>