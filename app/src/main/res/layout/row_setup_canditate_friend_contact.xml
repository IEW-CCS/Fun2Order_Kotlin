<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle_gray"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"

        >

        <CheckBox
            android:id="@+id/SelectCheckBox"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            />

        <ImageView
            android:id="@+id/SelectFriendView"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_toRightOf="@id/SelectCheckBox"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/SelectFriendView"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:weightSum="1.0"
            >

            <TextView
                android:id="@+id/SelectFriendName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/SelectFriendDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"
                android:textSize="12dp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>