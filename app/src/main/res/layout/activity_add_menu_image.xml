<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewMenuBasicInfo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#E0E0E0"
            android:gravity="center_vertical"
            android:text="  照片"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewAddMenuImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="新增照片"
            android:textColor="#4FC3F7"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMenuDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.3"
                android:text="菜單描述"
                android:textColor="#000000"
                android:textSize="18dp"
                android:visibility="gone" />

        </LinearLayout>

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/home_rollPagerView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            app:rollviewpager_hint_gravity="left"
            android:background="#000000">

        </com.jude.rollviewpager.RollPagerView>

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="#E0E0E0"
            android:gravity="center_vertical"
            android:text="  敘述"
            android:textColor="#000000"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/linearLayoutMenuImageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMenuPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.3"
                android:text="菜單圖片"
                android:textColor="#4FC3F7"
                android:textSize="18dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextMenuDesc"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.7"
                android:background="@drawable/corners_rect_gray"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="4dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btnAddImageCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:text="取消"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18dp" />

            <android.widget.Button
                android:id="@+id/btnAddImageOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:text="確定"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18dp" />
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>